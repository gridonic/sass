{
  "name": "@gridonic/sass",
  "version": "1.2.0",
  "description": "Our Sass foundation.",
  "main": "./src/styles.scss",
  "scripts": {
    "build": "node-sass ./src -o ./build --importer ./node_modules/node-sass-glob",
    "build:prod": "npm run build -- --output-style compressed",
    "docs": "sassdoc ./src -d ./docs -v",
    "predocs": "npm run build",
    "prestyleguide": "npm run build",
    "styleguide": "aigis run -c ./aigis/config.yml",
    "test": "npm run build && echo ✔︎  OK",
    "watch": "npm run build -- --watch"
  },
  "author": "Gridonic <hello@gridonic.ch>",
  "license": "MIT",
  "devDependencies": {
    "node-aigis": "^1.4.0",
    "node-sass": "^4.5.0",
    "node-sass-glob": "^1.0.4",
    "sassdoc": "^2.2.2"
  },
  "dependencies": {
    "include-media": "^1.4.9",
    "normalize.css": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gridonic/sass.git"
  },
  "keywords": [
    "sass",
    "css",
    "boilerplate",
    "gridonic",
    "foundation",
    "styleguide",
    "styleguide-generator",
    "documentation",
    "documentation-generator",
    "sassdoc",
    "aigis",
    "rscss"
  ],
  "bugs": {
    "url": "https://github.com/gridonic/sass/issues"
  },
  "homepage": "https://github.com/gridonic/sass#readme"
}

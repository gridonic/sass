{
  "name": "@gridonic/sass",
  "version": "1.3.0",
  "description": "Our Sass foundation.",
  "main": "./src/styles.scss",
  "scripts": {
    "build": "node-sass ./src -o ./build --importer ./node_modules/node-sass-magic-importer/dist/cli.js",
    "build:prod": "npm run build -- --output-style compressed",
    "docs": "sassdoc ./src -d ./docs -v",
    "postinstall": "selenium-standalone install",
    "prestyleguide": "npm run build",
    "pretest": "npm run styleguide",
    "styleguide": "aigis run -c ./aigis/config.yml",
    "test": "./bin/gemini test",
    "test:update": "./bin/gemini update",
    "watch": "onchange './src/**/*.scss' -w -- concurrently 'npm run styleguide' 'npm run docs'"
  },
  "author": "Gridonic <hello@gridonic.ch>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^3.4.0",
    "gemini": "^4.18.1",
    "node-aigis": "^1.4.0",
    "node-sass": "^4.5.2",
    "node-sass-magic-importer": "^4.1.4",
    "onchange": "^3.2.1",
    "sassdoc": "^2.2.2",
    "selenium-standalone": "^6.2.0",
    "wait-on": "^2.0.2"
  },
  "dependencies": {
    "include-media": "^1.4.9",
    "normalize.css": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gridonic/sass.git"
  },
  "keywords": [
    "sass",
    "css",
    "boilerplate",
    "gridonic",
    "foundation",
    "styleguide",
    "styleguide-generator",
    "documentation",
    "documentation-generator",
    "sassdoc",
    "aigis",
    "rscss"
  ],
  "bugs": {
    "url": "https://github.com/gridonic/sass/issues"
  },
  "homepage": "https://github.com/gridonic/sass#readme"
}
